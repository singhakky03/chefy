.well
  .row
    .col-xs-10
      %h4 Thank You
      %h5 Your order details are here
    .col-xs-10.text-right
      %h4.text-right
        Sub Total:
        %span{:style => "color: green"}= number_to_currency @order.subtotal
      %h4.text-right
        Shipping Charge:
        %span{:style => "color: green"}= number_to_currency @order.shipping
      %h4.text-right
        Tax Charge:
        %span{:style => "color: green"}= number_to_currency @order.tax
      %h4.text-right
        Total:
        %span{:style => "color: green"}= number_to_currency @order.total